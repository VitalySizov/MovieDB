<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="0.5dp"
                android:color="@color/gray" />
        </shape>
    </item>

    <item
        android:bottom="0.5dp"
        android:top="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>